{
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "campaigns/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/sobre", "dest": "/public/sobre.html" },
    { "src": "/privacidade", "dest": "/public/privacidade.html" },
    { "src": "/termos", "dest": "/public/termos.html" },
    { "src": "/contacto", "dest": "/public/contacto.html" },
    { "src": "/aliexpress", "dest": "/campaigns/aliexpress/live.html" },
    { "src": "/dhgate", "dest": "/campaigns/dhgate/live.html" },
    { "handle": "filesystem" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}